@model LavoCar.Controllers.Lavagem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Lavagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LavID" />
            <div class="form-group">
                <label asp-for="DataLav" class="control-label"></label>
                <input asp-for="DataLav" class="form-control" />
                <span asp-validation-for="DataLav" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="tipoLavagem" class="control-label"></label>
                <select asp-for="tipoLavagem" class="form-control" asp-items=@(new SelectList(ViewBag.Lavagem, "TipoLavID", "DescTipoLav"))></select>
                <span asp-validation-for="TipoLavagemID" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
