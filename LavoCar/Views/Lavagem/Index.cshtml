@model IEnumerable<LavoCar.Controllers.Lavagem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataLav)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorLav)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataLav)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorLav)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LavID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LavID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LavID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
