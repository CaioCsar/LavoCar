@model LavoCar.Models.Recibo

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes de Recibo</h1>

<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.NomeCliente)
        </dd>
        <dt class = "col-sm-2">
            Modelo do Veículo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Carro.Modelo)
        </dd>
        <dt class = "col-sm-2">
            Data de Lavagem
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lavagem.DataLav)
        </dd>
        <dt class = "col-sm-2">
            Tipo de Lavagem
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoLavagem.DescTipoLav)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.ReciboID">Editar</a> |
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
