@model LavoCar.Controllers.TipoLavagem

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Novo Tipo</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DescTipoLav" class="control-label"></label>
                <input asp-for="DescTipoLav" class="form-control" />
                <span asp-validation-for="DescTipoLav" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoTipoLav" class="control-label"></label>
                <input asp-for="PrecoTipoLav" class="form-control" />
                <span asp-validation-for="PrecoTipoLav" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LavID" class="control-label">Data da Lavagem</label>
                <select asp-for="LavID" class="form-control" asp-items="@(new SelectList(ViewBag.Lavagens, "LavID", "DataLav"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
