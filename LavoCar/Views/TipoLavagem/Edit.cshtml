@model LavoCar.Controllers.TipoLavagem

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Tipo de Lavagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TipoLavID" />
            <div class="form-group">
                <label asp-for="DescTipoLav" class="control-label"></label>
                <input asp-for="DescTipoLav" class="form-control" />
                <span asp-validation-for="DescTipoLav" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoTipoLav" class="control-label"></label>
                <input asp-for="PrecoTipoLav" class="form-control" />
                <span asp-validation-for="PrecoTipoLav" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
