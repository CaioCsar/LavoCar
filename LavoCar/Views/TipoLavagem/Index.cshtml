@model IEnumerable<LavoCar.Controllers.TipoLavagem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Criar novo Tipo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescTipoLav)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoTipoLav)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescTipoLav)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoTipoLav)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TipoLavID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.TipoLavID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.TipoLavID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
